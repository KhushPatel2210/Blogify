<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head') %>
    <title>Home | Blogify</title>
  </head>
  <body>
    <%- include('./partials/nav') %>

    <main class="container my-5">
      <% if (blogs.length > 0) { %>
      <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        <% blogs.forEach(blog => { %>
        <div class="col">
          <div class="card h-100 shadow-sm">
            <div style="height: 200px; overflow: hidden">
              <% if (blog.coverImageURL) { %>
              <img
                src="<%= blog.coverImageURL %>"
                class="img-cover"
                alt="<%= blog.title %>"
              />
              <% } else { %>
              <div
                class="no-cover-image d-flex align-items-center justify-content-center bg-light text-muted"
                style="height: 200px"
              >
                <p class="m-0">No Cover Image Available</p>
              </div>
              <% } %>
            </div>
            <div class="card-body d-flex flex-column">
              <h5 class="card-title fw-bold"><%= blog.title %></h5>
              <p class="card-text text-muted mt-2">
                <%= blog.body.substring(0, 150) %>...
              </p>
            </div>
            <div class="card-footer bg-white border-top-0">
              <a
                href="/blog/<%= blog._id %>"
                class="btn btn-outline-primary w-100"
              >
                Read More <i class="fas fa-arrow-right ms-2"></i>
              </a>
            </div>
          </div>
        </div>
        <% }) %>
      </div>
      <% } else { %>
      <div class="text-center py-5">
        <i class="fas fa-blog fa-4x text-muted mb-4"></i>
        <h3 class="fw-bold">No Blogs Yet</h3>
        <p class="text-muted">Be the first to create a blog post!</p>
        <a href="/blog/add-new" class="btn btn-primary px-4">
          <i class="fas fa-plus me-2"></i>Create Blog
        </a>
      </div>
      <% } %>
    </main>

    <%- include('./partials/scripts') %>
  </body>
</html>
